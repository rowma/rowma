{
  "name": "rowma",
  "version": "0.0.1",
  "description": "Rowma ConnectionManager",
  "main": "dist/src/index.js",
  "repository": "https://github.com/rowma",
  "author": "asmsuechan",
  "license": "GPL",
  "scripts": {
    "dev:watch": "ts-node-dev src/index.ts",
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start:server": "node .",
    "start": "npm run build && npm run start:server",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "check": "npm-run-all prettier lint",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "coveralls": "coveralls",
    "test:coverage": "nyc mocha -r ts-node/register tests/**/*.test.ts"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "exclude": [
      "coverage/",
      ".eslintrc.js",
      "emit-example.js",
      "tests/**/*.ts"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "dependencies": {
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.3.11",
    "@types/socket.io": "^2.1.4",
    "axios": "^0.19.0",
    "chai": "^4.2.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "mocha": "^6.2.2",
    "mongodb": "^3.3.5",
    "sinon": "^7.5.0",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "socketio-jwt": "^4.5.0",
    "socketio-wildcard": "^2.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/node": "^12.11.7",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "istanbul": "^0.4.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "1.18.2",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.43",
    "typescript": "^3.6.4"
  }
}
